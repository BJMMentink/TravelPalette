<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Amenities</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        li {
            margin-bottom: 5px;
        }
    </style>
</head>
<body>
    <h1>List of Amenities</h1>
    <ul id="amenities-list">
        <!-- Amenities will be dynamically added here -->
    </ul>

    <script>
        // Load the JSON file
        fetch('../Data/style.json')
            .then(response => response.json())
            .then(data => {
                // Extract amenity data
                const amenities = new Set();
                data.layers.forEach(layer => {
                    if (layer.type === 'symbol') { // Assuming amenities are stored in symbol layers
                        layer['source-layer'] === 'restaurant' && layer.layout && layer.layout['text-field'] && amenities.add(layer.layout['text-field']);
                    }
                });

                // Function to dynamically generate the list items
                function generateListItems(data) {
                    const list = document.getElementById('amenities-list');
                    data.forEach(item => {
                        const listItem = document.createElement('li');
                        listItem.textContent = item;
                        list.appendChild(listItem);
                    });
                }

                // Call the function to generate list items
                generateListItems(Array.from(amenities));
            })
            .catch(error => {
                console.error('Error fetching style data:', error);
            });
    </script>
</body>
</html>
